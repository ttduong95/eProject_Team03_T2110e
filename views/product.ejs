<script type="text/javascript">
    function cong<%= product.ID %>(){
        var t = document.getElementById("textbox<%= product.ID %>").value;
        document.getElementById("textbox<%= product.ID %>").value = parseInt(t)+1;
    }
    function tru<%= product.ID %>(){
        var t = document.getElementById("textbox<%= product.ID %>").value;
        if (parseInt(t)>1){
            document.getElementById("textbox<%= product.ID %>").value = parseInt(t)-1;
        }
    }


    var giohang<%= product.ID %> = new Array();

    function addcart(x) {
        var boxsp = x.parentElement.children;
        var Img = boxsp[0].children[0].src;
        var Name = boxsp[1].children[0].innerText;
        var Color = boxsp[1].children[2].children[2].innerText;
        var Price = boxsp[1].children[2].children[0].children[0].innerText;
        var Quantity = parseInt(boxsp[1].children[2].children[5].children[0].children[1].value);
        var sp = new Array(Img, Name, Color, Price, Quantity);
        //kiemtragiohang
        var kt = 0;
        for (let i=0;i<giohang<%= product.ID %>.length;i++){
            if (giohang<%= product.ID %>[i][1] == Name){
                kt = 1;
                Quantity+=parseInt(giohang<%= product.ID %>[i][4]);
                giohang<%= product.ID %>[i][4] = Quantity;
                break;
            }
        }
        if (kt == 0){
            giohang<%= product.ID %>.push(sp);
        }
        console.log(giohang<%= product.ID %>);
        showcountsp();
        shomycart();
        //luc gio hang
        localStorage.setItem("giohang",JSON.stringify(giohang<%= product.ID %>));

    }
    function showcountsp() {
        document.getElementById("countsp").innerHTML = giohang<%= product.ID %>.length;
    }
    giohang<%= product.ID %> = localStorage.getItem("giohang") ? JSON.parse(localStorage.getItem("giohang")) :[];
    function shomycart(){
        var ttgh = "";
        var total = 0;
        for (let i=0;i<giohang<%= product.ID %>.length;i++){
            var tt = parseInt(giohang<%= product.ID %>[i][3]) * parseInt(giohang<%= product.ID %>[i][4]);
            total+=tt;
            ttgh+= "<div class=\"hinhanh1\">\n" +
                "        <img src=\""+giohang<%= product.ID %>[i][0]+"\" width=\"20px\" height=\"20px\" alt=\"\">\n" +
                "    </div>\n" +
                "    <div class=\"thongtin1\">\n" +
                "        <h5>"+giohang<%= product.ID %>[i][1]+"</h5>\n" +
                "        <p>"+giohang<%= product.ID %>[i][2]+"</p>\n" +
                "        <h4><span>$</span>"+ tt +"</h4>\n" +
                "        <input class=\"minus is-form\" type=\"button\" onclick=\"tru(this)\" value=\"-\">\n" +
                "        <input aria-label=\"quantity\" class=\"input-qty\" max=\"10\" min=\"1\" name=\"\" type=\"number\" value=\""+ giohang<%= product.ID %>[i][4] +"\" id=\"textbox\">\n" +
                "        <input class=\"plus is-form\" onclick=\"cong(this)\" type=\"button\" value=\"+\">\n" +
                "    </div>";
        }
        ttgh += "<div class=\"total\">\n" +
            "        <h4>Total : $"+ total +"</h4>\n" +
            "    </div>";
        document.getElementById("showcart").innerHTML = ttgh;
        showcountsp();
    }
</script>
